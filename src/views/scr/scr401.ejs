<% layout('layout') -%>
<div class="container">
   <div class="row">
      <div class="col-md-3">
      <ol class="breadcrumb">
      <li><a href="#">Home</a></li>
      <li><a href="#">Library</a></li>
      <li class="active">Data</li>
      </ol>

      <!--Sidebar content-->
      <form role="form">
      <fieldset>
         <legend><span class="glyphicon glyphicon-user"></span>スキルマップ</legend>
            <span class="help-block">地域を選択できます。</span>
            <select multiple="multiple" size="4" name="sel_area">
            <% for (var i=0, max = pageNavi.area.length; i < max; i++) { %>
                <option value="<%= pageNavi.area[i].val %>">
                  <%= pageNavi.area[i].name %></option>
            <% } %>
            </select>
            <span class="help-block">スキルを選択できます。</span>
            <select multiple="multiple" size="4" name="sel_area">
            <% for (var i=0, max = pageNavi.catg.length; i < max; i++) { %>
                <option value="<%= pageNavi.catg[i].val %>">
                  <%= pageNavi.catg[i].name %></option>
            <% } %>
            </select>
         <button type="button" class="btn btn-primary">選択</button>

         <div class="dropdown">
         <!-- Link or button to toggle dropdown -->
         <ul class="dropdown-menu" role="menu" aria-labelledby="dropdownMenu1">
         <li role="presentation"><a role="menuitem" tabindex="-1" href="#">Action</a></li>
         <li role="presentation"><a role="menuitem" tabindex="-1" href="#">Another action</a></li>
         <li role="presentation"><a role="menuitem" tabindex="-1" href="#">Something else here</a></li>
         <li role="presentation" class="divider"></li>
         <li role="presentation"><a role="menuitem" tabindex="-1" href="#">Separated link</a></li>
         </ul>
         </div>

      </fieldset>
      </form>
      </div>
      <div class="col-md-9">
      <div class="row">
         <ul class="nav nav-tabs">
            <li class="active"><a href="/">Home</a></li>
            <li><a href="/scr/401?profile=yes">Profile</a></li>
            <li><a href="/scr/401?message=yes">Messages</a></li>
         </ul>
      </div>
      </div>
      <div class="col-md-9">
      <div class="row">

      <table class="table table-striped table-bordered table-condensed">
         <thead>
            <tr><th>名前</th><th>紹介文</th><th>スキル</th><th>URL</th></tr>
         </thead>
         <tbody>
            <% for (var i=0, max = pageNavi.sklist.length; i < max; i++) { %>
            <tr>
                <td><span class="badge badge-success"><%= i+1 %></span>
                <%= pageNavi.sklist[i].name %></td>
                <td><%= pageNavi.sklist[i].desc %></td>
                <td>
                  <% for (var j=0,jmax = pageNavi.sklist[i].skill.length; j <jmax; j++) { %>
                     <%= pageNavi.sklist[i].skill[j] %>
                  <% } %>
                </td>
                <td><a href="<%= pageNavi.sklist[i].href %>">link</a></td>
            </tr>
            <% } %>
        </tbody>
      </table>
      </div><!-- row -->
      </div><!-- span9 -->
      </div>
   </div>
</div>
